<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset>

		<field name="id" type="text" default="0" label="COM_FREESTROKE_FORM_LBL_MEETSESSION_ID"
			readonly="true" class="readonly" description="JGLOBAL_FIELD_ID_DESC" />

		<field name="name" type="text" size="40" class="inputbox"
			label="COM_FREESTROKE_FORM_LBL_MEET_NAME" description="COM_FREESTROKE_FORM_DESC_MEETSESSION_NAME"
			required="true" filter="safehtml" />

		<field name="startdate" type="calendar" class="inputbox" required="true"
			default="0000-00-00" format="%Y-%m-%d" label="COM_FREESTROKE_FORM_LBL_MEET_MINDATE"
			description="COM_FREESTROKE_FORM_DESC_MEETSESSION_STARTDATE" filter="safehtml" />

		<field name="starttime" type="calendar" class="inputbox" default="0000-00-00"
			label="COM_FREESTROKE_FORM_LBL_MEET_MAXDATE" description="COM_FREESTROKE_FORM_DESC_MEET_MAXDATE"
			filter="safehtml" />

		<field name="starttime" 
			label="COM_FREESTROKE_FORM_LBL_MEETSESSION_STARTTIME" description="COM_FREESTROKE_FORM_DESC_MEETSESSION_STARTTIME"
			type="text"
			validate="regex"
			regex="^(([0-1]?[0-9])|([2][0-3])):([0-5][0-9])$"
			class="validate-regex"/>

		
		<field name="warmupfrom" 
			label="COM_FREESTROKE_FORM_LBL_MEETSESSION_WARMUPFROM" description="COM_FREESTROKE_FORM_DESC_MEETSESSION_WARMUPFROM"
			type="text"
			validate="regex"
			regex="^(([0-1]?[0-9])|([2][0-3])):([0-5][0-9])$"
			class="validate-regex"/>
		
		<field name="warmupuntil" 
			label="COM_FREESTROKE_FORM_LBL_MEETSESSION_WARMUPUNTIL" description="COM_FREESTROKE_FORM_DESC_MEETSESSION_WARMUPUNTIL"
			type="text"
			validate="regex"
			regex="^(([0-1]?[0-9])|([2][0-3])):([0-5][0-9])$"
			class="validate-regex"/>

		<field name="officialmeeting" 
			label="COM_FREESTROKE_FORM_LBL_MEETSESSION_OFFICIALMEETING" description="COM_FREESTROKE_FORM_DESC_MEETSESSION_OFFICIALMEETING"
			type="text"
			validate="regex"
			regex="^(([0-1]?[0-9])|([2][0-3])):([0-5][0-9])$"
			class="validate-regex"/>

		<field name="teamleadermeeting" 
			label="COM_FREESTROKE_FORM_LBL_MEETSESSION_TEAMLEADERMEETING" description="COM_FREESTROKE_FORM_DESC_MEETSESSION_TEAMLEADERMEETING"
			type="text"
			validate="regex"
			regex="^(([0-1]?[0-9])|([2][0-3])):([0-5][0-9])$"
			class="validate-regex"/>
		
		<field name="judges" type="textarea" 
			label="COM_FREESTROKE_FORM_LBL_MEETSESSION_JUDGES" description="COM_FREESTROKE_FORM_DESC_MEETSESSION_JUDGES"
		    rows="5" cols="40" />		

		<field name="transport" type="textarea" 
			label="COM_FREESTROKE_FORM_LBL_MEETSESSION_TRANSPORT" description="COM_FREESTROKE_FORM_DESC_MEETSESSION_TRANSPORT"
		    rows="5" cols="40" />		

		<field name="carpool" type="textarea" 
			label="COM_FREESTROKE_FORM_LBL_MEETSESSION_CARPOOL" description="COM_FREESTROKE_FORM_DESC_MEETSESSION_CARPOOL"
		    rows="5" cols="40" />		

	</fieldset>

</form>
