<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset>
		<field name="id" type="text" default="0" label="COM_FREESTROKE_FORM_LBL_SWIMSTYLE_ID" readonly="true" class="readonly" description="JGLOBAL_FIELD_ID_DESC"/>
		<field name="code" type="text" label="COM_FREESTROKE_FORM_LBL_SWIMSTYLE_CODE" description="COM_FREESTROKE_FORM_DESC_SWIMSTYLE_CODE" filter="safehtml"
			size="10" maxlength="10"/>
