			filter="safehtml" size="40" maxlength="50"/>
		<field name="relaycount" type="text" label="COM_FREESTROKE_FORM_LBL_SWIMSTYLE_RELAYCOUNT" description="COM_FREESTROKE_FORM_DESC_SWIMSTYLE_RELAYCOUNT"
			default="1" required="true" filter="uint" size="3" maxlength="3"/>
