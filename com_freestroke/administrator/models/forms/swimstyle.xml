			<option value="FREE">COM_FREESTROKE_STROKE_FREE</option>
			<option value="BACK">COM_FREESTROKE_STROKE_BACK</option>
			<option value="FLY">COM_FREESTROKE_STROKE_FLY</option>
			<option value="MEDLEY">COM_FREESTROKE_STROKE_MEDLEY</option>
		</field>
		<field name="filter_strokecode" type="list" onchange="this.form.submit();">
			<option value="">COM_FREESTROKE_SWIMSTYLES_STROKE_FILTER</option>
			<option value="X">COM_FREESTROKE_STROKE_X</option>
			<option value="FREE">COM_FREESTROKE_STROKE_FREE</option>
			<option value="BACK">COM_FREESTROKE_STROKE_BACK</option>
			<option value="FLY">COM_FREESTROKE_STROKE_FLY</option>
			<option value="MEDLEY">COM_FREESTROKE_STROKE_MEDLEY</option>
		</field>
	</fieldset>
</form>